<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#FF424242"
            android:padding="10dp"
            app:cardPreventCornerOverlap="false"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDIALOG_MOD_PELANGGAN_Judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:background="#98FFFFFF"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:text="@string/detail"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#2E000000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_ID_Judul"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1.35"
                        android:textColor="@color/white"
                        android:gravity="start"
                        android:text="@string/idpelanggan"/>
                    
                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_ID"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.65"
                        android:gravity="end"
                        android:text="ID PELANGGAN"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4DFFFFFF"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_Nama_Judul"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/white"
                        android:layout_weight="1.35"
                        android:gravity="start"
                        android:text="@string/tvnama"/>

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_Nama"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.65"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:text="NAMA PELANGGAN"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#2E000000"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_ALAMAT_Judul"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1.35"
                        android:gravity="start"
                        android:text="@string/tvalamat"/>

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_ALAMAT"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.65"
                        android:gravity="end"
                        android:textColor="@color/white"
                        android:text="ALAMAT"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4DFFFFFF"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_NOHP_Judul"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1.35"
                        android:textColor="@color/white"
                        android:gravity="start"
                        android:text="@string/tvnohp"/>

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_NOHP"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.65"
                        android:textColor="@color/white"
                        android:gravity="end"
                        android:text="NO HP"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#2E000000"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_CABANG_Judul"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1.35"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:text="@string/cbg"/>

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_CABANG"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.65"
                        android:textColor="@color/white"
                        android:gravity="end"
                        android:text="CABANG"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4DFFFFFF"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_DAFTAR_Judul"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1.35"
                        android:textColor="@color/white"
                        android:gravity="start"
                        android:text="@string/ttl"/>

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PELANGGAN_DAFTAR"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="0.65"
                        android:textColor="@color/white"
                        android:gravity="end"
                        android:text="TERDAFTAR"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btDIALOG_MOD_PELANGGAN_Edit"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="3dp"
                        android:text="@string/sunting"
                        android:textColor="@android:color/white"
                        app:icon="@drawable/editnote"
                        app:iconTint="@android:color/white"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart"
                        android:backgroundTint="#2196F3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btDIALOG_MOD_PELANGGAN_Hapus"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <Button
                        android:id="@+id/btDIALOG_MOD_PELANGGAN_Hapus"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/hapus"
                        android:textColor="@color/white"

                        android:backgroundTint="#B82929"
                        app:icon="@drawable/delete"
                        app:iconTint="@android:color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btDIALOG_MOD_PELANGGAN_Edit"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>