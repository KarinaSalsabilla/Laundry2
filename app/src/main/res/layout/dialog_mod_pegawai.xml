<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                app:cardPreventCornerOverlap="false"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDIALOG_MOD_PEGAWAI_Judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:text="@string/stafdetail"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:background="?android:attr/colorButtonNormal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_ID_Judul"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1.35"
                            android:gravity="start"
                            android:text="@string/idpegawai"/>

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_ID"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="0.65"
                            android:gravity="end"
                            android:text="ID PEGAWAI"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_Nama_Judul"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1.35"
                            android:gravity="start"
                            android:text="@string/namapega"/>

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_Nama"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="0.65"
                            android:gravity="end"
                            android:text="NAMA PEGAWAI"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:background="?android:attr/colorButtonNormal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_ALAMAT_Judul"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1.35"
                            android:gravity="start"
                            android:text="@string/tvalamat"/>

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_ALAMAT"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="0.65"
                            android:gravity="end"
                            android:text="ALAMAT"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_NOHP_Judul"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1.35"
                            android:gravity="start"
                            android:text="@string/tvnohp"/>

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_NOHP"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="0.65"
                            android:gravity="end"
                            android:text="NO HP"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:background="?android:attr/colorButtonNormal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_CABANG_Judul"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1.35"
                            android:gravity="start"
                            android:text="@string/cbg"/>

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_CABANG"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="0.65"
                            android:gravity="end"
                            android:text="CABANG"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_DAFTAR_Judul"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1.35"
                            android:gravity="start"
                            android:text="@string/ttl"/>

                        <TextView
                            android:id="@+id/tvDIALOG_MOD_PEGAWAI_DAFTAR"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="0.65"
                            android:gravity="end"
                            android:text="TERDAFTAR"/>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btDIALOG_MOD_PEGAWAI_Edit"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="3dp"
                            android:backgroundTint="#2196F3"
                            android:text="@string/sunting"
                            android:textColor="@android:color/white"
                            app:icon="@drawable/editnote"
                            app:iconTint="@android:color/white"
                            app:iconPadding="8dp"
                            app:iconGravity="textStart"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/btDIALOG_MOD_PEGAWAI_Hapus"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <Button
                            android:id="@+id/btDIALOG_MOD_PEGAWAI_Hapus"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="3dp"
                            android:text="@string/hapus"
                            android:backgroundTint="#B82929"
                            app:icon="@drawable/delete"
                            app:iconTint="@android:color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/btDIALOG_MOD_PEGAWAI_Edit"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>




                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
