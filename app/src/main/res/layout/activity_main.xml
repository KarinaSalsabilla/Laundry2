<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/halo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/abril"
        android:text="@string/halo"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/parkinsans"
        android:text="08 Januari 2025"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/halo"
        tools:ignore="HardcodedText" />

    <!-- Main Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:elevation="10dp"
        android:translationZ="10dp"
        app:cardBackgroundColor="#9E30D0"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tanggal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Price Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/estimasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/parkinsans"
                    android:text="@string/estimasi"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/rp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/parkinsans"
                    android:text="Rp."
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/empat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/parkinsans"
                    android:text="40.000"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:id="@+id/garis"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#B4B3B3" />

            <!-- Menu Icons Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Transaction -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/tras"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/purse"
                        android:contentDescription="@string/trans" />

                    <TextView
                        android:id="@+id/txttrans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/parkinsans"
                        android:text="@string/trans"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Customer -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/pelanggan1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/best"
                        android:contentDescription="@string/pelanggan" />

                    <TextView
                        android:id="@+id/txtpelanggan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/parkinsans"
                        android:text="@string/pelanggan"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Report -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/imagebuttonlaporan"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/report"
                        android:contentDescription="@string/lapor" />

                    <TextView
                        android:id="@+id/txtlaporan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/parkinsans"
                        android:text="@string/lapor"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Welcome Text Section -->
    <TextView
        android:id="@+id/hati"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/abril"
        android:text="@string/textdepan"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card1" />

    <TextView
        android:id="@+id/textbiasa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/abril"
        android:text="@string/textdepan2"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hati" />

    <!-- Menu Grid Section -->
    <LinearLayout
        android:id="@+id/menuGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbiasa">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Account -->
            <androidx.cardview.widget.CardView
                android:id="@+id/akun"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#9E30D0"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/gb1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/user"
                        android:contentDescription="@string/akun" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/parkinsans"
                        android:text="@string/akun"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Service -->
            <androidx.cardview.widget.CardView
                android:id="@+id/layanan"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="#9E30D0"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/wasching"
                        android:contentDescription="@string/lay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/parkinsans"
                        android:text="@string/lay"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Additional -->
            <androidx.cardview.widget.CardView
                android:id="@+id/tambahan"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="#9E30D0"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/bg2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/plus"
                        android:contentDescription="@string/Tambahan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/parkinsans"
                        android:text="@string/Tambahan"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Employee -->
            <androidx.cardview.widget.CardView
                android:id="@+id/pegawai1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#9E30D0"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/pegawai"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/em"
                        android:contentDescription="@string/pegawai" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/parkinsans"
                        android:text="@string/pegawai"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Branch -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cabang"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="#9E30D0"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/cabang2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/franchise"
                        android:contentDescription="@string/cbg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/parkinsans"
                        android:text="@string/cbg"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Printer -->
            <androidx.cardview.widget.CardView
                android:id="@+id/print"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="#9E30D0"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/inkjet"
                        android:contentDescription="Printer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/parkinsans"
                        android:text="Printer"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>